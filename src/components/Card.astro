---
export interface Props {
	link: string
  technology: string
  name: string
  description: string,
}

const {link, technology, name, description } = Astro.props;
---

<article class="card">
	<a
		href={link}
		target="_blank"
		rel="noreferrer"
	>
		<p class="card__subtitle">{ technology }</p>
		<h3 class="card__title">{ name }</h3>
		<p class="card__description">{ description }</p>
	</a>
</article>

<style>
	.card {
  padding: 2.5rem;
  background-color: rgb(32 32 34/1);
  transition: all .2s ease-in-out;
}

.card__title {
  font-weight: 600;
  font-size: 2.5rem;
  margin-bottom: .5rem;
}

.card__subtitle {
  letter-spacing: 3px;
  font-size: 1.25rem;
  font-weight: 700;
  text-transform: uppercase;
}

.card__description {
  color: rgb(148 148 149/1);
  line-height: 1.3rem;
}
</style>
